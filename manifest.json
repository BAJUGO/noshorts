{
  "manifest_version": 2,
  "name": "noshorts",
  "version": "0.1.2",

  "description": "disable all YouTube shorts that distract your attention",

  "permissions": [
    "<all_urls>"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "BAJUGO_@_noshorts.com"
    }
  },
  "icons": {
    "48": "icons/48.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/48.png"
    },
    "default_title": "No shorts!",
    "default_popup": "../pages/noshorts_popup.html"
  },

  "background": {
    "scripts": ["scripts/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["scripts/youtube.js"]
    },
    {
      "matches": ["*://*.tiktok.com/*", "*://*.instagram.com/*", "*://*.x.com/*"],
      "js": ["scripts/full_prohibited.js"]
    }
  ],

  "web_accessible_resources": [
    "pages/anti-brainrot.html"
  ]
}